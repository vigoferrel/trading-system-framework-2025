# Binance API Configuration
# Reemplaza 'tu_api_key_aqui' y 'tu_api_secret_aqui' con tus credenciales reales de Binance

# API Key de Binance (obligatoria para trading real)
BINANCE_API_KEY=tu_api_key_aqui

# API Secret de Binance (obligatoria para trading real)
BINANCE_API_SECRET=tu_api_secret_aqui

# URLs de la API de Binance (no modificar)
BINANCE_SPOT_BASE_URL=https://api.binance.com/api/v3
BINANCE_OPTIONS_BASE_URL=https://eapi.binance.com/eapi/v1

# Modo Testnet (true para pruebas, false para trading real)
# Recomendado: true para empezar, false cuando estés listo para operar con dinero real
BINANCE_TESTNET=true

# Service Configuration
# Nombre del servicio (puedes dejar el valor por defecto)
BOT_OPCIONES_NAME=bot-opciones

# Puerto del servicio (puedes dejar el valor por defecto)
BOT_OPCIONES_PORT=4601

# Environment (development, staging, production)
NODE_ENV=development

# Quantum System Configuration
# Símbolos de opciones soportados (no modificar)
QUANTUM_SYMBOLS=BTC,ETH,BNB,SOL,XRP,DOGE

# Risk Level (low, medium, high)
QUANTUM_RISK_LEVEL=medium

# Trading Configuration
# Tamaño por defecto de la posición
TRADING_DEFAULT_POSITION_SIZE=1

# Máximo de posiciones simultáneas
TRADING_MAX_POSITIONS=6

# Porcentaje de stop loss (ej: 0.1 = 10%)
TRADING_STOP_LOSS_PERCENTAGE=0.1

# Porcentaje de take profit (ej: 0.2 = 20%)
TRADING_TAKE_PROFIT_PERCENTAGE=0.2

# Frecuencia de actualización en milisegundos (ej: 300000 = 5 minutos)
TRADING_UPDATE_FREQUENCY=300000

# Frecuencia de optimización ML en milisegundos (ej: 3600000 = 1 hora)
TRADING_ML_OPTIMIZATION_FREQUENCY=3600000

# Logging Configuration
# Nivel de logging (debug, info, warn, error)
LOGGING_LEVEL=debug

# Formato de logging (json, text)
LOGGING_FORMAT=json

# === Unified Integrated Monouser Defaults ===
TRADE_MODE=unified
VIGO_FUTURES_ENABLED=true
PORT=4602
DEFAULT_VIGO_WEIGHT=0.4

# Auto-start Unified Auto-Exec
AUTOSTART_UNIFIED_AUTO_EXEC=true
AUTOEXEC_INTERVAL_SEC=120
AUTOEXEC_TOP=5
AUTOEXEC_PER_SYMBOL_CAP_USD=0