import subprocess
import time
import sys
import os
import signal
from datetime import datetime

def print_banner():
    """Imprime el banner del sistema."""
    print("=" * 80)
    print("ğŸš€ DESPLIEGUE CORREGIDO - SISTEMA QBTC BANDA 46")
    print("=" * 80)
    print(f"ğŸ“… Fecha: {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}")
    print("ğŸ¯ Banda: 46")
    print("ğŸ”— Puertos: 4601-4606")
    print("ğŸ§¹ Limpieza automÃ¡tica de puertos")
    print("ğŸ”§ Manejo mejorado de errores")
    print("=" * 80)

def clean_ports_fixed():
    """Limpia puertos usando comandos del sistema de forma mÃ¡s robusta."""
    print("ğŸ§¹ LIMPIEZA INICIAL DE PUERTOS")
    print("-" * 50)
    
    ports_to_clean = [4601, 4602, 4603, 4604, 4605, 4606]
    
    for port in ports_to_clean:
        try:
            # Usar netstat para encontrar procesos en el puerto
            result = subprocess.run(
                f'netstat -ano | findstr :{port}',
                shell=True,
                capture_output=True,
                text=True,
                timeout=10
            )
            
            if result.stdout and result.stdout.strip():
                print(f"ğŸ›‘ Encontrado proceso en puerto {port}")
                # Extraer PID y terminar proceso
                lines = result.stdout.strip().split('\n')
                for line in lines:
                    if f':{port}' in line:
                        parts = line.split()
                        if len(parts) >= 5:
                            pid = parts[-1]
                            try:
                                # Intentar terminar el proceso
                                subprocess.run(f'taskkill /F /PID {pid}', shell=True, timeout=5)
                                print(f"âœ… Proceso {pid} terminado en puerto {port}")
                            except subprocess.TimeoutExpired:
                                print(f"âš ï¸ Timeout terminando proceso {pid}")
                            except Exception as e:
                                print(f"âš ï¸ Error terminando proceso {pid}: {e}")
            else:
                print(f"âœ… Puerto {port} libre")
                
        except subprocess.TimeoutExpired:
            print(f"âš ï¸ Timeout verificando puerto {port}")
        except Exception as e:
            print(f"âš ï¸ Error verificando puerto {port}: {e}")
    
    time.sleep(3)
    print("âœ… Limpieza de puertos completada\n")

def check_ports_fixed():
    """Verifica que los puertos estÃ©n libres de forma mÃ¡s robusta."""
    print("ğŸ” VERIFICANDO PUERTOS")
    print("-" * 50)
    
    ports = [4601, 4602, 4603, 4604, 4605, 4606]
    busy_ports = []
    
    for port in ports:
        try:
            import socket
            sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
            sock.settimeout(2)  # Timeout de 2 segundos
            result = sock.connect_ex(('localhost', port))
            sock.close()
            
            if result == 0:
                busy_ports.append(port)
                print(f"âŒ Puerto {port} estÃ¡ ocupado")
            else:
                print(f"âœ… Puerto {port} estÃ¡ libre")
                
        except Exception as e:
            print(f"âš ï¸ Error verificando puerto {port}: {e}")
    
    if busy_ports:
        print(f"\nâš ï¸ Puertos ocupados: {busy_ports}")
        print("ğŸ”„ Intentando limpieza adicional...")
        clean_ports_fixed()
        
        # Verificar nuevamente
        time.sleep(2)
        still_busy = []
        for port in busy_ports:
            try:
                import socket
                sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
                sock.settimeout(2)
                result = sock.connect_ex(('localhost', port))
                sock.close()
                
                if result == 0:
                    still_busy.append(port)
                    print(f"âŒ Puerto {port} sigue ocupado despuÃ©s de la limpieza")
                else:
                    print(f"âœ… Puerto {port} liberado despuÃ©s de la limpieza")
                    
            except Exception as e:
                print(f"âš ï¸ Error verificando puerto {port}: {e}")
        
        if still_busy:
            print(f"\nâŒ Puertos aÃºn ocupados: {still_busy}")
            return False
    
    print("âœ… Todos los puertos estÃ¡n libres\n")
    return True

def start_service_fixed(service_name, script_path, port):
    """Inicia un servicio en segundo plano con mejor manejo de errores."""
    try:
        print(f"ğŸš€ Iniciando {service_name} en puerto {port}...")
        
        # Verificar que el script existe
        if not os.path.exists(script_path):
            print(f"âŒ Script no encontrado: {script_path}")
            return None
        
        # Comando para iniciar el servicio
        if script_path.endswith('.py'):
            cmd = [sys.executable, script_path]
        else:
            cmd = ['node', script_path]
        
        # Iniciar proceso en segundo plano con mejor manejo
        process = subprocess.Popen(
            cmd,
            stdout=subprocess.DEVNULL,
            stderr=subprocess.DEVNULL,
            text=True,
            creationflags=subprocess.CREATE_NEW_CONSOLE if os.name == 'nt' else 0
        )
        
        # Esperar un momento para que el servicio se inicie
        time.sleep(3)
        
        # Verificar si el proceso estÃ¡ corriendo
        if process.poll() is None:
            print(f"âœ… {service_name} iniciado correctamente (PID: {process.pid})")
            return process
        else:
            print(f"âŒ Error iniciando {service_name} - proceso terminado")
            return None
            
    except FileNotFoundError:
        print(f"âŒ Comando no encontrado para {service_name}")
        return None
    except Exception as e:
        print(f"âŒ Error iniciando {service_name}: {e}")
        return None

def deploy_services_fixed():
    """Despliega los servicios principales de la banda 46 con mejor manejo de errores."""
    print("ğŸš€ DESPLIEGUE DE SERVICIOS PRINCIPALES")
    print("-" * 50)
    
    services = [
        {
            "name": "QBTC Core",
            "script": "core-system-organized.js",
            "port": 4602,
            "description": "Core del sistema QBTC - Sistema cuÃ¡ntico organizado (CORREGIDO)"
        },
        {
            "name": "SRONA API",
            "script": "srona-api-server.py",
            "port": 4601,
            "description": "API de opciones y contexto neural"
        },
        {
            "name": "Frontend API",
            "script": "frontend-api-server.py",
            "port": 4603,
            "description": "API del frontend"
        },
        {
            "name": "Vigo Futures",
            "script": "vigo-futures-server.py",
            "port": 4604,
            "description": "Sistema de futuros"
        },
        {
            "name": "Dashboard QBTC",
            "script": "dashboard-http.py",
            "port": 4605,
            "description": "Monitoreo y visualizaciÃ³n"
        },
        {
            "name": "Monitor de GrÃ¡ficos",
            "script": "monitor-graficos-server-simple.py",
            "port": 4606,
            "description": "VisualizaciÃ³n de grÃ¡ficos en tiempo real"
        }
    ]
    
    processes = []
    successful_services = 0
    
    for i, service in enumerate(services, 1):
        print(f"\n[{i}/{len(services)}] {service['name']} - Puerto {service['port']}")
        print(f"   DescripciÃ³n: {service['description']}")
        
        if os.path.exists(service["script"]):
            process = start_service_fixed(service["name"], service["script"], service["port"])
            if process:
                processes.append({
                    "name": service["name"],
                    "process": process,
                    "port": service["port"],
                    "description": service["description"]
                })
                successful_services += 1
            else:
                print(f"âŒ FallÃ³ el inicio de {service['name']}")
        else:
            print(f"âš ï¸ Script no encontrado: {service['script']}")
        
        time.sleep(2)  # Pausa entre servicios
    
    print(f"\nğŸ“Š Resumen: {successful_services}/{len(services)} servicios iniciados correctamente")
    return processes

def verify_services_fixed(processes):
    """Verifica que los servicios estÃ©n funcionando."""
    print("\nğŸ” VERIFICACIÃ“N DE SERVICIOS")
    print("-" * 50)
    
    working_services = 0
    total_services = len(processes)
    
    for service in processes:
        try:
            if service["process"].poll() is None:
                print(f"âœ… {service['name']} - Puerto {service['port']} - FUNCIONANDO")
                working_services += 1
            else:
                print(f"âŒ {service['name']} - Puerto {service['port']} - INACTIVO")
        except Exception as e:
            print(f"âŒ {service['name']} - Puerto {service['port']} - ERROR: {e}")
    
    print(f"\nğŸ“Š Resumen: {working_services}/{total_services} servicios funcionando")
    
    if working_services == total_services:
        print("ğŸ‰ Â¡Todos los servicios estÃ¡n funcionando correctamente!")
    elif working_services > 0:
        print("âš ï¸ Algunos servicios estÃ¡n funcionando")
    else:
        print("âŒ NingÃºn servicio estÃ¡ funcionando")
    
    return working_services

def print_status_fixed(processes):
    """Imprime el estado del sistema."""
    print("\n" + "=" * 80)
    print("ğŸ“Š ESTADO DEL SISTEMA QBTC BANDA 46")
    print("=" * 80)
    
    print("\nğŸ”— SERVICIOS ACTIVOS:")
    for service in processes:
        try:
            if service["process"].poll() is None:
                print(f"âœ… {service['name']} - Puerto {service['port']} - PID: {service['process'].pid}")
            else:
                print(f"âŒ {service['name']} - Puerto {service['port']} - INACTIVO")
        except Exception as e:
            print(f"âŒ {service['name']} - Puerto {service['port']} - ERROR: {e}")
    
    print("\nğŸŒ ACCESO A SERVICIOS:")
    print("â€¢ SRONA API: http://localhost:4601")
    print("â€¢ Frontend API: http://localhost:4603")
    print("â€¢ Vigo Futures: http://localhost:4604")
    print("â€¢ Dashboard QBTC: http://localhost:4605")
    print("â€¢ Monitor de GrÃ¡ficos: http://localhost:4606")
    
    print("\nğŸ“‹ COMANDOS ÃšTILES:")
    print("â€¢ Verificar servicios: curl http://localhost:4601/health")
    print("â€¢ Detener todos: taskkill /F /IM python.exe")
    print("â€¢ Reiniciar: python deploy-banda-46-fixed.py")
    
    print("\n" + "=" * 80)

def main():
    """FunciÃ³n principal."""
    print_banner()
    
    # Limpieza inicial
    clean_ports_fixed()
    
    # Verificar puertos
    if not check_ports_fixed():
        print("âŒ Algunos puertos estÃ¡n ocupados. Intenta detener los procesos manualmente.")
        print("ğŸ’¡ Comando: taskkill /F /IM python.exe")
        return
    
    # Desplegar servicios
    processes = deploy_services_fixed()
    
    if not processes:
        print("âŒ No se pudo iniciar ningÃºn servicio")
        return
    
    # Verificar servicios
    working_count = verify_services_fixed(processes)
    
    # Mostrar estado
    print_status_fixed(processes)
    
    if working_count > 0:
        print(f"\nğŸ¯ Â¡Sistema QBTC Banda 46 desplegado! ({working_count} servicios activos)")
        print("ğŸ“± Abre http://localhost:4606 para acceder al monitor de grÃ¡ficos")
    else:
        print("\nâŒ Sistema QBTC Banda 46 no pudo ser desplegado correctamente")
    
    print("\nâ³ Presiona Ctrl+C para detener todos los servicios...")
    
    try:
        # Mantener el script corriendo
        while True:
            time.sleep(1)
    except KeyboardInterrupt:
        print("\n\nğŸ›‘ Deteniendo servicios...")
        
        # Detener procesos
        for service in processes:
            try:
                service["process"].terminate()
                print(f"ğŸ›‘ {service['name']} detenido")
            except:
                pass
        
        print("âœ… Todos los servicios detenidos")

if __name__ == "__main__":
    main()
