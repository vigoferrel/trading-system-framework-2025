// [NIGHT] MANEJO DE ERRORES GLOBAL
app.use((error, req, res, next) => {
    console.error('[ERROR] Error en endpoint:', error);
    res.status(500).json({ error: 'Error interno del servidor' });
});

// [NIGHT] INICIO DEL SERVIDOR
async function startServer() {
    try {
        const initialized = await initializeQuantumSystem();
        
        if (!initialized) {
            console.error('[ERROR] No se pudo inicializar el sistema cu치ntico');
            process.exit(1);
        }
        
        app.listen(PORT, () => {
            console.log(`[NIGHT] Sistema Cu치ntico ejecut치ndose en puerto ${PORT}`);
            console.log(`游댩 Dashboard disponible en: http://localhost:4603`);
            console.log(`[FAST] Configuraci칩n optimizada activa`);
        });
        
    } catch (error) {
        console.error('[ERROR] Error iniciando servidor:', error);
        process.exit(1);
    }
}

// [NIGHT] MANEJO DE SE칌ALES DE TERMINACI칍N
process.on('SIGINT', () => {
    console.log('\n[NIGHT] Cerrando Sistema Cu치ntico...');
    process.exit(0);
});

process.on('SIGTERM', () => {
    console.log('\n[NIGHT] Cerrando Sistema Cu치ntico...');
    process.exit(0);
});

// [NIGHT] INICIAR SERVIDOR
startServer();
