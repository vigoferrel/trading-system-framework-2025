{
  "name": "@qbtc/bot-opciones",
  "version": "1.0.0",
  "private": true,
  "description": "QBTC Options/Futures Bot Service",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "node __tests__/run-tests.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "CI=true node __tests__/run-tests.js",
    "test:unit": "jest --testMatch='**/__tests__/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/__tests__/integration/**/*.test.js'",
    "test:performance": "npx jest --testMatch='**/__tests__/performance/**/*.test.js'",
    "test:regression": "npx jest --testMatch='**/__tests__/regression/**/*.test.js'",
    "test:simple": "npx jest --testMatch='**/__tests__/unit/*-simple.test.js'",
    "test:complete": "node scripts/run-complete-pipeline.js",
    "reports:generate": "node scripts/generate-reports.js",
    "quality:monitor": "node scripts/quality-monitor.js",
    "quality:dashboard": "node scripts/quality-monitor.js && echo Dashboard disponible en __tests__/reports/quality-dashboard.md",
    "dev": "nodemon index.js",
    "futures:fg": "node quantum/integrated-system.js",
    "futures:bg": "node quantum/launch-futures-background.js start",
    "futures:stop": "node quantum/launch-futures-background.js stop",
    "futures:status": "node quantum/launch-futures-background.js status",
    "futures:logs": "node quantum/launch-futures-background.js logs 100"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "binance-api-node": "^0.12.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "path-to-regexp": "^6.3.0",
    "router": "^1.3.8",
    "socket.io": "^4.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "@jest/environment-node": "^29.7.0",
    "supertest": "^6.3.3",
    "nock": "^13.4.0",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0"
  }
}
