const axios = require('axios');

async function testBinanceConnection() {
    console.log('üîç Probando conexi√≥n a Binance...');
    
    try {
        const response = await axios.get('https://fapi.binance.com/fapi/v1/ticker/24hr', {
            timeout: 10000,
            headers: {
                'User-Agent': 'QBTC-Test/1.0',
                'Accept': 'application/json'
            }
        });
        
        if (response.data && Array.isArray(response.data)) {
            console.log(`‚úÖ Conexi√≥n exitosa! Datos obtenidos: ${response.data.length} s√≠mbolos`);
            
            // Mostrar algunos s√≠mbolos de ejemplo
            const sampleSymbols = response.data.slice(0, 5);
            sampleSymbols.forEach(item => {
                console.log(`  - ${item.symbol}: $${item.lastPrice} (${item.priceChangePercent}%)`);
            });
            
            // Verificar s√≠mbolos espec√≠ficos
            const btcData = response.data.find(item => item.symbol === 'BTCUSDT');
            if (btcData) {
                console.log(`‚úÖ BTCUSDT encontrado: $${btcData.lastPrice}`);
            } else {
                console.log('‚ùå BTCUSDT no encontrado');
            }
            
        } else {
            console.log('‚ùå Respuesta de Binance no v√°lida');
        }
        
    } catch (error) {
        console.error('‚ùå Error conectando a Binance:', error.message);
        if (error.response) {
            console.error('Status:', error.response.status);
            console.error('Headers:', error.response.headers);
        }
    }
}

testBinanceConnection();
